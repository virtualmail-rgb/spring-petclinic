pipeline {
    agent { label 'free-script-11' }
    parameters {
        choice(name: 'Build-on-Branch', choices: ['main','maseter'], description: ''))
    }
    pramaters {
        string(name: 'Build method', defaultvalue: 'package', description: '')
    }
    stages {
        stage ('mvn version') {
            steps {
                sh "mvn --version"
            }
        }
        stage ('clone') {
            steps {
                git url: 'https://github.com/virtualmail-rgb/spring-petclinic.git', branch: 'main'
            }
        }
        stage ('build') {
            steps {
                sh 'mvn package'
            }
        }
    }
}