pipeline {
    agent { label 'free-script-11' }
    parameters {
        choice(name: 'Build-on-Branch', choices: ['main','master'], description: 'descrip for what is the branch')
        string(name: 'BUILD_METHOD', defaultvalue: 'package', description: 'type of build or package')
    }
    triggers {
        pollscm(*****)
    }
    stages {
        stage ('mvn version') {
            steps {
                sh "mvn --version"
            }
        }
        stage ('clone') {
            steps {
                git url: 'https://github.com/virtualmail-rgb/spring-petclinic.git', branch: "${params.Build-on-Branch}"
            }
        }
        stage ('build') {
            steps {
                sh "mvn ${params.BUILD_METHOD}"
            }
        }
    }
}
