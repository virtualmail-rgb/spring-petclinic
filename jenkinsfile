pipeline {
    agent { label 'free-script-11' }
    parameters {
        choice(name: 'Build-on-Branch', choices: ['main','maseter'], description: 'descrip for what is the branch')
        string(name: 'Build method', defaultValue: 'package', description: 'type of build or package')
    }
    stages {
        stage ('mvn version') {
            steps {
                sh "mvn --version"
            }
        }
        stage ('clone') {
            steps {
                git url: 'https://github.com/virtualmail-rgb/spring-petclinic.git', branch: "${params.Build-on-Branch}"
            }
        }
        stage ('build') {
            steps {
                sh "/usr/share/maven/bin/mvn ${params.Build method}"
            }
        }
    }
}
